    @model CVBuilder.Models.CV
@{
    ViewData["Title"] = "Delete CV";
}

<h2 class="text-center mb-4 text-danger">Delete CV</h2>

<div class="form-container">
    <div class="section">
        <h4>Are you sure you want to delete this CV?</h4>
        <p>This action cannot be undone.</p>
    </div>

    <div class="section">
        <h4>CV Summary</h4>
        <p><strong>Full Name:</strong> @Model.FirstName @Model.LastName</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Phone:</strong> @Model.PhoneNumber</p>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="btn-container">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

<style>
    .form-container {
        max-width: 600px;
        margin: auto;
        background: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    .section {
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid #ddd;
    }

    .btn-container {
        display: flex;
        justify-content: space-between;
        margin-top: 1.5rem;
    }
</style>
