@model IEnumerable<CVBuilder.Models.CV>

@{
    ViewData["Title"] = "Your CVs";
}

<h2>Your CVs</h2>

<table class="table">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cv in Model)
        {
            <tr>
                <td>@cv.FirstName @cv.LastName</td>
                <td>@cv.Email</td>
                <td>@cv.PhoneNumber</td>
                <td>
                    <a asp-action="Details" asp-route-id="@cv.Id">View</a> |
                    <a asp-action="Edit" asp-route-id="@cv.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@cv.Id">Delete</a>
                    <a asp-action="DownloadPdf" asp-route-id="@cv.Id" class="btn btn-success">Download PDF</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New CV</a>
